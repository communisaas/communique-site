{
	"name": "communique-site",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "node build",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest --config=vitest.config.ts",
		"test:unit:run": "vitest --run --config=vitest.config.ts",
		"test:unit:coverage": "vitest --coverage --config=vitest.config.ts",
		"test": "npm run test:unit:run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:mcp": "playwright test --config=playwright-mcp.config.ts",
		"test:e2e:debug": "playwright test --config=playwright-mcp.config.ts --debug",
		"test:e2e:headed": "playwright test --config=playwright-mcp.config.ts --headed",
		"test:address": "npm run test:unit:run src/lib/services/zipDistrictLookup.test.ts src/lib/congress/address-lookup.test.ts src/routes/api/address/*/server.test.ts",
		"test:all": "./scripts/test-all.sh",
		"db:start": "docker compose up",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:studio": "prisma studio",
		"db:seed": "tsx scripts/seed-db.ts",
		"postinstall": "prisma generate && svelte-kit sync"
	},
	"devDependencies": {
		"@playwright/mcp": "^0.0.32",
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.8.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.0.6",
		"@vitest/coverage-istanbul": "^2.1.9",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"jsdom": "^26.1.0",
		"mdsvex": "^0.12.3",
		"playwright-mcp": "^0.0.12",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"prisma": "^6.10.1",
		"svelte": "^5.1.11",
		"svelte-check": "^4.0.5",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.7.1",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0",
		"vite": "^5.4.10",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@lucide/svelte": "^0.525.0",
		"@node-rs/argon2": "^2.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@prisma/client": "^6.10.1",
		"@selfxyz/core": "^1.0.7-beta.1",
		"@selfxyz/qrcode": "^1.0.10-beta.1",
		"@types/qrcode": "^1.5.5",
		"arctic": "^3.7.0",
		"ncu": "^0.2.1",
		"postgres": "^3.4.5",
		"qrcode": "^1.5.4",
		"uuid": "^11.1.0"
	}
}
