{
	"name": "communique-site",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "node build",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:strict": "prettier --check . && eslint . --max-warnings 0",
		"test:unit": "vitest tests/unit --config=vitest.config.ts",
		"test:integration": "vitest tests/integration --config=vitest.config.ts",
		"test:all": "npm run test:run && npm run test:e2e",
		"test:run": "vitest --run --config=vitest.config.ts",
		"test:coverage": "vitest --coverage --config=vitest.config.ts",
		"test": "npm run test:run",
		"test:e2e": "playwright test --config=playwright.config.ts",
		"test:production": "ENABLE_BETA=false ENABLE_RESEARCH=false npm run test:run",
		"test:beta": "ENABLE_BETA=true npm run test:run",
		"test:ci": "npm run test:run && npm run test:e2e",
		"test:health": "npm run test:coverage && node -e \"console.log('Health reports generated in coverage/ directory')\"",
		"test:drift": "npm run test:unit && node -e \"const detector = require('./tests/config/mock-drift-detection.ts'); detector.mockDriftDetector.exportDriftReport();\"",
		"db:start": "docker compose up",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:studio": "prisma studio",
		"db:seed": "tsx scripts/seed-database.ts",
		"db:seed:core": "tsx scripts/seed-database.ts",
		"postinstall": "prisma generate && svelte-kit sync"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.39.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@types/dompurify": "^3.0.5",
		"@types/eslint": "^9.6.1",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/mailparser": "^3.4.6",
		"@types/node": "^24.3.2",
		"@types/nodemailer": "^7.0.1",
		"@types/smtp-server": "^3.5.12",
		"@vitest/coverage-istanbul": "^2.1.9",
		"@vitest/coverage-v8": "^2.1.9",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"jsdom": "^26.1.0",
		"mdsvex": "^0.12.6",
		"msw": "^2.4.11",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"prisma": "^6.16.1",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^5.4.10",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.899.0",
		"@aws-sdk/client-sqs": "^3.899.0",
		"@codemirror/basic-setup": "^0.20.0",
		"@codemirror/lang-html": "^6.4.10",
		"@codemirror/state": "^6.5.2",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.38.4",
		"@floating-ui/dom": "^1.7.4",
		"@lucide/svelte": "^0.525.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@prisma/client": "^6.16.1",
		"@selfxyz/core": "^1.0.8",
		"@selfxyz/qrcode": "^1.0.11",
		"@types/qrcode": "^1.5.5",
		"arctic": "^3.7.0",
		"axios": "^1.7.2",
		"codemirror": "^6.0.2",
		"dompurify": "^3.2.7",
		"ethers": "^6.13.4",
		"jsonwebtoken": "^9.0.2",
		"mailparser": "^3.7.1",
		"ncu": "^0.2.1",
		"postgres": "^3.4.7",
		"qrcode": "^1.5.4",
		"smtp-server": "^3.14.0",
		"uuid": "^11.1.0"
	}
}
