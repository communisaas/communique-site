{
	"name": "house-worker",
	"version": "1.0.0",
	"description": "AWS Lambda function for processing House CWC submissions via GCP proxy",
	"main": "dist/index.js",
	"scripts": {
		"build": "webpack --mode production",
		"build:dev": "webpack --mode development",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist",
		"deploy": "npm run build && aws lambda update-function-code --function-name house-cwc-worker --zip-file fileb://dist/house-worker.zip",
		"package": "npm run build && cd dist && zip -r house-worker.zip .",
		"validate": "npm run typecheck && npm run lint && npm run test"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.525.0",
		"@aws-sdk/lib-dynamodb": "^3.525.0"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.136",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"eslint": "^8.57.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"typescript": "^5.4.3",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>"
		],
		"testMatch": [
			"**/__tests__/**/*.test.ts"
		],
		"collectCoverageFrom": [
			"*.ts",
			"!*.config.ts",
			"!*.d.ts",
			"!dist/**"
		],
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		}
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_"
				}
			],
			"@typescript-eslint/explicit-function-return-type": "error",
			"@typescript-eslint/no-explicit-any": "error",
			"@typescript-eslint/prefer-const": "error",
			"no-console": "off"
		},
		"env": {
			"node": true,
			"jest": true
		}
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-org/communique.git",
		"directory": "infrastructure/aws/lambda/house-worker"
	},
	"keywords": [
		"aws",
		"lambda",
		"house",
		"cwc",
		"gcp",
		"proxy",
		"civic",
		"engagement"
	],
	"author": "Communique Team",
	"license": "MIT"
}
