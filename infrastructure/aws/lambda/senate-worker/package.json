{
	"name": "communique-senate-worker",
	"version": "1.0.0",
	"description": "AWS Lambda function for processing Senate CWC submissions from SQS",
	"main": "dist/index.js",
	"scripts": {
		"build": "webpack --mode=production",
		"build:dev": "webpack --mode=development",
		"build:watch": "webpack --mode=development --watch",
		"package": "npm run build && zip -r senate-worker.zip dist/",
		"deploy": "npm run package && aws lambda update-function-code --function-name communique-senate-worker --zip-file fileb://senate-worker.zip",
		"test": "jest",
		"test:watch": "jest --watch",
		"lint": "eslint src/**/*.ts",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"aws",
		"lambda",
		"sqs",
		"senate",
		"cwc",
		"congressional",
		"advocacy"
	],
	"author": "Communique Team",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.470.0",
		"@aws-sdk/lib-dynamodb": "^3.470.0",
		"@types/aws-lambda": "^8.10.130"
	},
	"devDependencies": {
		"@types/jest": "^29.5.8",
		"@types/node": "^20.9.0",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"eslint": "^8.54.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-org/communique.git",
		"directory": "infrastructure/aws/lambda/senate-worker"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src",
			"<rootDir>/tests"
		],
		"testMatch": [
			"**/__tests__/**/*.test.ts",
			"**/?(*.)+(spec|test).ts"
		],
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/*.d.ts"
		],
		"coverageDirectory": "coverage",
		"coverageReporters": [
			"text",
			"lcov",
			"html"
		]
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_"
				}
			],
			"@typescript-eslint/explicit-function-return-type": "error",
			"@typescript-eslint/no-explicit-any": "warn",
			"no-console": "off"
		},
		"env": {
			"node": true,
			"es2022": true
		}
	}
}
